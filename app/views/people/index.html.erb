<div>
    <div class="row">
        <h1>Lista de contatos</h1>
    </div>

    <div class="row">
        <div class="panel panel-default">
            <div class="panel-heading">
                Listagem dos contatods cadastrados
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Nome</th>
                                <th>Idade</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% @persons.each do |people|%>
                                <tr>
                                    <td><%= people.id%></td>
                                    <td><%= people.name%></td>
                                    <td><%= people.idade%></td>
                                </tr>
                            <% end %>
                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
    </div>
</div>  